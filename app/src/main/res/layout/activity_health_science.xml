<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#033970"
    tools:context=".HealthScience"
    android:padding="15dp">

        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/blue_border"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="261dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:padding="3dp"
                    android:src="@drawable/open">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/banner"
            android:layout_marginTop="1dp">

            <RelativeLayout
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_below="@id/video"
                    android:id="@+id/zenith"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/zenithbuil"/>

                <TextView
                    android:layout_below="@id/zenith"
                    android:id="@+id/txt1"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tMental Health stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:layout_below="@id/txt1"
                    android:id="@+id/txt2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tMicrobiology stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:layout_below="@id/txt2"
                    android:id="@+id/txt3"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\t\Anatomy stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:layout_below="@id/txt3"
                    android:id="@+id/txt4"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tHealthy Food stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt4"
                    android:id="@+id/txt5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tChemistry stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt5"
                    android:id="@+id/txt6"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tHematology stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt6"
                    android:id="@+id/txt7"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tDisease stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt7"
                    android:id="@+id/txt8"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tHerbal Drug Manufacture stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt8"
                    android:id="@+id/txt9"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tCosmetic stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt9"
                    android:id="@+id/txt10"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tMolecular Genetics stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt10"
                    android:id="@+id/txt11"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="\t\tENT stall"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt11"
                    android:id="@+id/txt12"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="\t\tNursing stall"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt12"
                    android:id="@+id/txt13"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tParasitology stall"
                    android:textColor="@color/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:layout_below="@id/txt13"
                    android:id="@+id/txt14"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="~All locacted in Zenith Building"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginBottom="30dp">
                </TextView>


                <TextView
                    android:layout_below="@id/txt13"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    android:text="All Copyrights Reserved By CINEC Campus - @2023"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/grey_font"
                    android:textSize="10dp" />

            </RelativeLayout>
        </ScrollView>
</RelativeLayout>